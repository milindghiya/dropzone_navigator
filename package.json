{
  "name": "dropzone-navigator",
  "productName": "Dropzone Navigator",
  "version": "1.0.0",
  "description": "A cross-platform desktop application for browsing and uploading files to Amazon S3 through access points with a tree-like interface",
  "author": "Your Name <your.email@example.com>",
  "license": "MIT",
  "homepage": "https://github.com/your-username/dropzone-navigator",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/dropzone-navigator.git"
  },
  "keywords": [
    "electron",
    "s3",
    "aws",
    "file-manager",
    "upload",
    "cross-platform"
  ],
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "NODE_ENV=development electron .",
    "build": "electron-builder --publish=never",
    "build:win": "electron-builder --win --publish=never",
    "build:mac": "electron-builder --mac --publish=never", 
    "build:linux": "electron-builder --linux --publish=never",
    "build:all": "electron-builder --win --mac --linux --publish=never",
    "clean": "rimraf dist/",
    "postinstall": "electron-builder install-app-deps"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.40.0"
  },
  "devDependencies": {
    "electron": "^30.0.0",
    "electron-builder": "^24.13.3",
    "rimraf": "^5.0.5"
  },
  "build": {
    "appId": "com.yourcompany.dropzone-navigator",
    "productName": "Dropzone Navigator",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "renderer.js",
      "preload.js",
      "index.html",
      "favicon.png",
      "package.json",
      "node_modules/**/*"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "favicon.png"
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "icon": "favicon.png",
      "category": "public.app-category.productivity"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "favicon.png",
      "category": "Utility"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "favicon.png",
      "uninstallerIcon": "favicon.png"
    }
  }
}
